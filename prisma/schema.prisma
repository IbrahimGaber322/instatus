// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Event {
  id          String      @id
  object      String
  actor_id    String
  actor_name  String
  group       String
  action_id   String
  action_object String
  action_name String
  target_id   String
  target_name String
  location    String
  occurred_at DateTime
  metadata    Json
}

